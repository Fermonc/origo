{
    "hosting": {
        "target": "default",
        "source": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "frameworksBackend": {
            "region": "us-central1"
        },
        "rewrites": [
            {
                "source": "**",
                "function": "ssr"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules"
    },
    "storage": {
        "rules": "storage.rules"
    }
}